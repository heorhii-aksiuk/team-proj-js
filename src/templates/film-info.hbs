{{#each this}}
<div class="modal-window-container-poster">
    <img class="card__img" src="https://www.themoviedb.org/t/p/w500{{poster_path}}">
    onerror="this.onerror=null;this.src='https://restorixhealth.com/wp-content/uploads/2018/08/No-Image.png' loading="lazy"
      alt="{{title}}" title="{{title}}" data-id="{{id}}" />
    {{else}}
    <img class="card__img" src="https://www.nopcommerce.com/images/thumbs/0005720_coming-soon-page.jpeg" loading="lazy" alt="{{title}}"
      title="{{title}}" data-id="{{id}}" />
    {{/if}}
</div>

<div class="modal-window-container-info">
    <h2 class="film-name-heading">{{title}}</h2>

    <div class="film-info-list">
        <ul class="list film-info-list-item film-info-list-item-left">
            <li class="film-info-text-left">Vote / Votes</li>
            <li class="film-info-text-left">Popularity</li>
            <li class="film-info-text-left">Original Title</li>
            <li class="film-info-text-left">Genre</li>
        </ul>

        <ul class="list film-info-list-item film-info-list-item-right">
            <li class="film-info-text-right film-info-text-right-numbers">
                <span class="film-rating-left">{{vote_average}}</span> <span class="film-rating-right"> / {{vote_count}}</span>
            </li>
            <li class="film-info-text-right film-info-text-right-numbers">{{popularity}}</li>
            <li class="film-info-text-right film-info-text-right-title">{{original_title}}</li>
            <li class="film-info-text-right">{{genre}}</li>
        </ul>
    </div>

</div>
<div class="modal-window-container-about">
    <h3 class="about-heading">About</h3>
    <p class="about-text">
        {{text}}
    </p>
</div>
{{/each}}

